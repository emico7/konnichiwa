<h2><%= @topic.name %></h2>

 <%= link_to "Edit Topic", edit_topic_path, class: 'btn btn-success' %>
 <%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this topic?' } %>

   <div class="col-md-8">
     <p class="lead"><%= @topic.description %></p>

     <% @topic.questions.each do |question| %>
       <div class="media">
         <div class="media-body">
           <h4 class="media-heading">
             <%= link_to question.title, topic_question_path(@topic, question) %>
           </h4>

           <small>
             submitted <%= time_ago_in_words(question.created_at) %> ago <br>
             <%= question.answers.count %> Answers
           </small>

         </div>
       </div>
     <% end %>
   </div>
   <div class="col-md-8", id="new-question">
     <%= link_to "New Question", new_topic_question_path(@topic), class: 'btn btn-success' %>
   </div>
 </div>
